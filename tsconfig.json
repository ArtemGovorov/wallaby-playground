{
    "angularCompilerOptions": {
      "entryModule": "app/app.module#AppModule",
      "genDir": "./ngfactory"
    },
    "compilerOptions": {
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "rootDir": "./src",
        "target": "es5",
        "lib": [
            "es2016",
            "dom"
        ],
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "emitDecoratorMetadata": true,
        "exclude": [
            "node_modules",
            "wallabyTest.ts",
            "**/*.spec.ts"
          ],
      "importHelpers": true,
      "module": "es2015",
      "noEmitHelpers": true,
      "pretty": true,
      "sourceMap": true,
      "strictNullChecks": false
    }
  }